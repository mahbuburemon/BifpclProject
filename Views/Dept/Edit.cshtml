@model DeptDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Department</h2>


        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["DeptId"]">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Department Name</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Dept_Name"></textarea>
                    <span asp-validation-for="Dept_Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Department Code</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Dept_Code"></textarea>
                    <span asp-validation-for="Dept_Code" class="text-danger"></span>
                </div>
            </div>

         

           

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="" asp-action="" role="button">
                        Cancel
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>